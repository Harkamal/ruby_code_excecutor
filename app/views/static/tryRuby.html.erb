<h1 class="tryRubyHead"> Try Your Ruby Script Online Here!</h1>

<div class="leftBar">
	<%= image_tag("ruby.jpg", alt: "Learn Ruby")%>
</div>

<div class="rightBar">
	<div class="scriptForm">
		<%= render "script_form" %>
	</div>
</div>
<div class="exportForm">
	<%= render "export_form" %>
</div>

<%= render "script_output" %>

<script>
	$('form#rubyCodeForm').submit(function() {
		$("#executeBtn").prop('disabled',true);
	});

	$('.my-code-area').ace({ theme: 'twilight', lang: 'ruby' });
	$('textarea').focus();
</script>